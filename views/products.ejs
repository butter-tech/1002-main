<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Termékek</title>
    <style>
        /* Az előző CSS kód itt marad */
        .product-grid {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            justify-content: center;
        }
        .product-card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            text-align: center;
            transition: all 0.3s ease;
            max-width: 250px;
            box-sizing: border-box;
            overflow: hidden;
        }
        .toggle-details {
            cursor: pointer;
            color: #007bff;
            margin-top: 10px;
        }
        .product-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
        }
        .details {
            display: none; /* Initially hidden */
            margin-top: 10px;
        }
        .details input {
            width: 90%;
            margin: 5px 0;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .btn {
            margin-top: 10px;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn:hover {
            background-color: #0056b3;
        }
        .error {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1>Forma 1-es Aláírt Tárgyak</h1>
            <nav>
                <ul>
                    <li><a href="/">Főoldal</a></li>
                    <li><a href="/products">Termékek</a></li>
                    <li><a href="/contact">Kapcsolat</a></li>
                    <li><a href="/about">Rólunk</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <section class="products">
            <h2>Termékeink</h2>
            <form id="orderForm" onsubmit="return submitOrder(event)">
                <div class="product-grid">
                    <div class="product-card">
                        <img src="/products/f1_helmet.jpg" alt="F1 Sisak">
                        <h3>Forma 1-es Sisak</h3>
                        <p>Aláírt sisak a legjobb pilóták által. Exkluzív darab!</p>
                        <div class="toggle-details" onclick="toggleDetails(this)">▼ Részletek</div>
                        <div class="details">
                            <input type="text" name="name" placeholder="Név" required>
                            <input type="text" name="billingAddress" placeholder="Számlázási cím" required>
                            <input type="text" name="shippingAddress" placeholder="Szállítási cím" required>
                            <input type="text" name="couponCode" placeholder="Kuponkód (opcionális)">
                            <input type="text" name="cardNumber" placeholder="XXXX-XXXX-XXXX-XXXX" required>
                            <input type="text" name="expiryDate" placeholder="Lejárati dátum HH/ÉÉ" required>
                            <input type="text" name="securityCode" placeholder="Biztonsági kód (3 számjegy)" required>
                            <input type="hidden" name="product" value="Forma 1-es Sisak">
                        </div>
                    </div>

                    <div class="product-card">
                        <img src="/products/f1_car_model.jpg" alt="F1 Autó Modell">
                        <h3>Forma 1-es Autó Modell</h3>
                        <p>Részletes modell, amely hűen tükrözi a versenyautókat. Ideális gyűjtőknek!</p>
                        <div class="toggle-details" onclick="toggleDetails(this)">▼ Részletek</div>
                        <div class="details">
                            <input type="text" name="name" placeholder="Név" required>
                            <input type="text" name="billingAddress" placeholder="Számlázási cím" required>
                            <input type="text" name="shippingAddress" placeholder="Szállítási cím" required>
                            <input type="text" name="couponCode" placeholder="Kuponkód (opcionális)">
                            <input type="text" name="cardNumber" placeholder="XXXX-XXXX-XXXX-XXXX" required>
                            <input type="text" name="expiryDate" placeholder="Lejárati dátum HH/ÉÉ" required>
                            <input type="text" name="securityCode" placeholder="Biztonsági kód (3 számjegy)" required>
                            <input type="hidden" name="product" value="Forma 1-es Autó Modell">
                        </div>
                    </div>

                    <div class="product-card">
                        <img src="/products/f1_photo.jpg" alt="F1 Fotó">
                        <h3>Aláírt F1 Fotó</h3>
                        <p>Exkluzív aláírt fotók a legjobb Forma 1-es pilótákról!</p>
                        <div class="toggle-details" onclick="toggleDetails(this)">▼ Részletek</div>
                        <div class="details">
                            <input type="text" name="name" placeholder="Név" required>
                            <input type="text" name="billingAddress" placeholder="Számlázási cím" required>
                            <input type="text" name="shippingAddress" placeholder="Szállítási cím" required>
                            <input type="text" name="couponCode" placeholder="Kuponkód (opcionális)">
                            <input type="text" name="cardNumber" placeholder="XXXX-XXXX-XXXX-XXXX" required>
                            <input type="text" name="expiryDate" placeholder="Lejárati dátum HH/ÉÉ" required>
                            <input type="text" name="securityCode" placeholder="Biztonsági kód (3 számjegy)" required>
                            <input type="hidden" name="product" value="Aláírt F1 Fotó">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn">Vásárlás</button>
                <div class="error" id="error-message"></div>
            </form>
        </section>
    </div>

    <footer>
        <div class="container footer">
            <p>&copy; 2024 Forma 1-es Webshop. Minden jog fenntartva.</p>
        </div>
    </footer>

    <script>
        function toggleDetails(element) {
            const card = element.parentElement;
            const details = card.querySelector('.details');
            if (details.style.display === 'block') {
                details.style.display = 'none'; // Hide details
            } else {
                details.style.display = 'block'; // Show details
            }
            card.classList.toggle('active');
        }

        function submitOrder(event) {
            event.preventDefault(); // Megakadályozza az űrlap alapértelmezett elküldését
            const cardNumber = event.target.querySelector('input[name="cardNumber"]').value;
            const expiryDate = event.target.querySelector('input[name="expiryDate"]').value;
            const securityCode = event.target.querySelector('input[name="securityCode"]').value;

            // Ellenőrizzük a bankkártya adatok érvényességét
            const isValidCardNumber = /^\d{4}-\d{4}-\d{4}-\d{4}$/.test(cardNumber);
            const isValidExpiryDate = /^\d{2}\/\d{2}$/.test(expiryDate);
            const isValidSecurityCode = /^\d{3}$/.test(securityCode);

            if (!isValidCardNumber || !isValidExpiryDate || !isValidSecurityCode) {
                document.getElementById("error-message").textContent = "Kérjük, ellenőrizze a bankkártya adatait!";
                return false; // Megakadályozza az űrlap elküldését
            }

            // Irányítsd a felhasználót az order.ejs oldalra
            window.location.href = '/order';
        }
    </script>
</body>
</html>
